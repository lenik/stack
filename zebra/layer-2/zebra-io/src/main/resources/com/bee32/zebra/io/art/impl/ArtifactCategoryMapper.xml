<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bee32.zebra.io.art.impl.ArtifactCategoryMapper">

    <resultMap id="map1" type="com.bee32.zebra.io.art.ArtifactCategory" extends="co.mapUS">
        <id column="id" />
        <result property="depth" column="depth" />
        <result property="skuCodeFormat" column="skufmt" />
        <result property="barCodeFormat" column="barfmt" />
        <result property="count" column="count" />
        <association property="parent" javaType="com.bee32.zebra.io.art.ArtifactCategory">
            <id column="parent" />
            <result property="label" column="label" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            parent.label "parent_label",
            u.label "uid_label",
            g.label "gid_label"
        from artcat a
            left join artcat parent on a.parent=parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            parent.label "parent_label",
            u.label "uid_label",
            g.label "gid_label"
        from artcat a
            left join artcat parent on a.parent=parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <if test="maxDepth != null">and a.depth&lt;=#{maxDepth}</if>
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id=#{id}</if>
        </where>
    </select>

    <select id="insert" resultType="int">
        <![CDATA[
        insert into artcat(code, label, description)
            values(#{codeName},#{label},#{description})
            returning id
    ]]></select>

    <update id="update">
        update artcat
        <set>
            <include refid="co.setU" />
        </set>
        <where>
            <if test="id != null">id=#{id}, </if>
        </where>
    </update>

    <delete id="delete">
        delete from artcat where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "total" from artcat
    </select>

</mapper>
