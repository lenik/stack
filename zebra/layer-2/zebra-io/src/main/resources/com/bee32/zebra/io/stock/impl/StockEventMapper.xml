<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bee32.zebra.io.stock.impl.StockEventMapper">

    <resultMap id="map1" type="com.bee32.zebra.io.stock.StockEvent" extends="message.map2">
        <result property="quantity" column="quantity" />
        <result property="total" column="total" />
        <association property="topic" javaType="com.bee32.zebra.oa.thread.Topic">
            <id column="topic" />
            <result property="subject" column="topic_subject" />
        </association>
        <association property="category" javaType="com.tinylily.model.base.schema.CategoryDef">
            <id column="cat" />
            <result property="label" column="cat_label" />
        </association>
        <association property="phase" javaType="com.tinylily.model.base.schema.PhaseDef">
            <id column="phase" />
            <result property="label" column="phase_label" />
        </association>
        <association property="org" javaType="com.bee32.zebra.oa.contact.Organization">
            <id column="org" />
            <result property="label" column="org_label" />
        </association>
        <association property="orgUnit" javaType="com.bee32.zebra.oa.contact.OrgUnit">
            <id column="org" />
            <result property="label" column="ou_label" />
        </association>
        <association property="person" javaType="com.bee32.zebra.oa.contact.Person">
            <id column="person" />
            <result property="label" column="person_label" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            topic.subject "topic_subject",
            cat.label "cat_label",
            phase.label "phase_label",
            org.label "org_label",
            ou.label "ou_label",
            person.label "person_label",
            u.label "uid_label",
            g.label "gid_label"
        from stdoc a
            left join topic on a.topic=topic.id
            left join cat on a.cat=cat.id
            left join phase on a.phase=phase.id
            left join org on a.org=org.id
            left join orgunit ou on a.ou=ou.id
            left join person on a.person=person.id
            left join "user" op on a.op=op.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            topic.subject "topic_subject",
            cat.label "cat_label",
            phase.label "phase_label",
            org.label "org_label",
            ou.label "ou_label",
            person.label "person_label",
            u.label "uid_label",
            g.label "gid_label"
        from stdoc a
            left join topic on a.topic=topic.id
            left join cat on a.cat=cat.id
            left join phase on a.phase=phase.id
            left join org on a.org=org.id
            left join orgunit ou on a.ou=ou.id
            left join person on a.person=person.id
            left join "user" op on a.op=op.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <if test="topicId != null">and a.topic=#{topicId}</if>
            <if test="orgId != null">and a.org=#{orgId}</if>
            <if test="orgUnitId != null">and a.ou=#{orgUnitId}</if>
            <if test="personId != null">and a.person=#{personId}</if>

            <!-- co -->
            <if test="timeRange != null">and a.lastmod between #{timeRange.min, jdbcType=DATE} and #{timeRange.max, jdbcType=DATE}</if>
            <!-- moment-interval -->
            <if test="dateRange != null">and a.t0 between #{dateRange.min, jdbcType=DATE} and #{dateRange.max, jdbcType=DATE}</if>
            <if test="year != null">and extract(year from a.t0)=#{year}</if>
            <if test="noDate">and a.t0 is null</if>
            <if test="noYear">and a.t0 is null</if>
            <!-- message -->
            <if test="opId != null">and a.op=#{opId}</if>
            <if test="categoryId != null">and a.cat=#{categoryId}</if>
            <if test="tagId != null">and x.tag=#{tagId}</if>
            <if test="phaseId != null">and a.phase=#{phaseId}</if>
            <if test="voteCountRange != null">and a.nvote between #{voteCountRange.min} and #{voteCountRange.max}</if>
            <if test="likerCountRange != null">and a.nlike between #{likerCountRange.min} and #{likerCountRange.max}</if>
            <if test="readCountRange != null">and a.nread between #{readCountRange.min} and #{readCountRange.max}</if>
            <if test="noOp">and a.op is null</if>
            <if test="noCategory">and a.cat is null</if>
            <if test="noTag">and x.tag is null</if>
            <if test="noPhase">and a.phase is null</if>
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id=#{id}</if>
        </where>
    </select>

    <select id="insert" resultType="long">
        <![CDATA[
        insert into stdoc(code, label, description)
            values(#{codeName},#{label},#{description})
            returning id
    ]]></select>

    <update id="update">
        update stdoc
        <set>
            <include refid="co.setU" />
        </set>
        <where>
            <if test="id != null">id=#{id}, </if>
        </where>
    </update>

    <delete id="delete">
        delete from stdoc where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "total" from stdoc
    </select>

    <select id="histoByYear" resultType="com.bee32.zebra.tk.util.F_YearCount"><![CDATA[
        select
            extract(year from t0)::int "year", 
            count(*) "count"
        from stdoc
        group by extract(year from t0)::int
    ]]></select>

</mapper>
