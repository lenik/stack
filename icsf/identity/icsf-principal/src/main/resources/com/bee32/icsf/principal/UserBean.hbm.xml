<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.bee32.icsf.principal">
    <class abstract="true" name="UserBean">

        <id name="id">
            <generator class="native" />
        </id>

        <discriminator column="stereo" />

        <property not-null="true" name="name" unique="true" length="30" />

        <many-to-one not-null="true" name="primaryRole" column="role1" />
        <many-to-one not-null="true" name="primaryGroup" column="group1" />

        <set name="assignedRoles" table="UserRole" lazy="true">
            <key column="user" />
            <many-to-many column="role" class="RoleBean" />
        </set>

        <set name="assignedGroups" table="UserGroup" lazy="true">
            <key column="user" />
            <many-to-many column="group" class="GroupBean" />
        </set>

    </class>
</hibernate-mapping>