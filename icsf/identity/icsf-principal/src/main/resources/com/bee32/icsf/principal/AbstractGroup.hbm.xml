<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.bee32.icsf.principal">
    <class abstract="true" name="AbstractGroup">

        <id name="id">
            <generator class="native" />
        </id>

        <discriminator column="stereo" />

        <property not-null="true" name="name" unique="true" length="30" />

        <many-to-one not-null="false" name="inheritedGroup" column="parent" />

        <many-to-one not-null="false" name="owner" />
        <many-to-one not-null="false" name="primaryRole" column="role1" />

        <set name="assignedRoles" table="GroupRole" lazy="true">
            <key column="user" />
            <many-to-many column="role" class="AbstractRole" />
        </set>

        <set name="memberUsers" table="UserGroup" lazy="true">
            <key column="group" />
            <many-to-many column="user" class="AbstractUser" />
        </set>

    </class>
</hibernate-mapping>