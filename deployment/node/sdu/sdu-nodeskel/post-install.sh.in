#!/bin/sh

# master-file

cd @DESTDIR@

    echo "Reset access permission on @nodedir@"
        install -d -m 2775 -o root -g dev @nodedir@


if [ -d /mnt/istore ]; then
    echo "Found istore, setup node-alt directory structure"

    altdir=/mnt/istore/node-alt
    install -d -m 2775 -o root -g dev $altdir
    install -d -m 2775 -o root -g dev $altdir/sites

    cd @nodedir@
    for altd in $altdir/*/; do
        ln -snf $altd .
    done
fi

exit 0

