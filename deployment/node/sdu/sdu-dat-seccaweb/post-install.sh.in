#!/bin/sh

# master-file

if [ ! -d /node/domains/seccaw ]; then

    echo "Create seecaw domain"

    sudo -uappserv /opt/java/glassfish/bin/asadmin \
        create-domain \
            --savelogin \
            --domaindir /node/domains \
            seccaw

    mv -f ~appserv/.asadminpass ~appserv/.seccaw.asadminpass

fi

cd /opt/java/glassfish/glassfish/domains
    sudo -uappserv ln -snf /node/domains/seccaw .

initctl start seccaw
