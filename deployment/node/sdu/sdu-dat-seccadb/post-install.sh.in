#!/bin/bash

# master-file

if [ ! -d /node/data/seccadb/base ]; then
    echo "Create seccadb cluster"

    install -d -opostgres -gdev /node/data/seccadb

    sudo -upostgres pg_createcluster \
        -d /node/data/seccadb \
        -e utf-8 \
        -p 1063 \
        --start \
        8.4 seccadb

    # shortcuts are generated by AM.
fi

