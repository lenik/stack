#!/bin/sh

# master-file

bindconfdir=@bindconfdir@
named_conf=$bindconfdir/named.conf

echo "Unconfig bind9"
    if lineconf -ekt $named_conf @section::secca; then
        echo "    done"
    else
        echo "    skipped"
    fi

echo "Reload bind9"
    /etc/init.d/bind9 reload

echo "Unload aliases site"
    a2dissite bee-aliases.site
    a2reload

exit 0
