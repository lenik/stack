#!/bin/sh

# master-file

bindconfdir=@bindconfdir@
named_conf=$bindconfdir/named.conf

echo "Config bind9"
    if lineconf -et $named_conf @section::secca \
            "include \"$bindconfdir/secca/named.conf\";"; then
        echo "    done"
    else
        echo "    skipped"
    fi

echo "Update substs on bee.db"
    @setupdir@/substs-db   @seccadbdir@/bee.db
    @setupdir@/substs-host @sysconfdir@/hosts

echo "Reload bind9"
    /etc/init.d/bind9 reload

echo "Load aliases site"
    a2enmod ssl
    a2enmod rewrite
    a2ensite bee-aliases.site
    a2reload

exit 0
