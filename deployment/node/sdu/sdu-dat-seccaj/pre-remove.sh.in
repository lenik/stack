#!/bin/sh

# master-file

domaindir=@pkgvarlibdir@

echo "Stop seccaj..."
    # initctl stop seccaj
    /etc/init.d/seccajctl stop

echo "Remove SysV init job: seccajctl"
    update-rc.d seccajctl remove

echo "Delete seccaj domain from glassfish"
    seccaj-admin delete-domain seccaj

echo Remove $domaindir
    rm -f  ~appserv/.seccaj.asadminpass
    rm -f  /opt/java/glassfish/glassfish/domains/seccaj
    rm -fR $domaindir

exit 0
