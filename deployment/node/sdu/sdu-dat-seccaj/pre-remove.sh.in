#!/bin/sh

# master-file

domaindir=/var/lib/seccaj

echo "Stop seccaj..."
    # initctl stop seccaj
    /etc/init.d/seccajctl stop

echo "Remove SysV init job: seccajctl"
    update-rc.d seccajctl remove

echo "Delete seccaj domain from glassfish"
    sudo -uappserv /opt/java/glassfish/bin/asadmin delete-domain seccaj

echo Remove $domaindir
    rm -f  ~appserv/.seccaj.asadminpass
    rm -f  /opt/java/glassfish/glassfish/domains/seccaj

    # rm -fR $domaindir

    # -depth -path '*/domains/*' -prune -o -delete
    # find $domaindir -depth -path lib/ -prune -o -delete

exit 0
