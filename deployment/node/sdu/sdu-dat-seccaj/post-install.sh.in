#!/bin/sh

# master-file

domaindir=/node/domains/seccaw

if [ ! -d $domaindir/applications ]; then

    echo "Create seccaw domain"
    echo "    (Purge $domaindir if necessary)"

    sudo -uappserv /opt/java/glassfish/bin/asadmin \
        create-domain \
            --savelogin \
            --domaindir /node/domains \
            --adminport 1090 \
            seccaw

    mv -f ~appserv/.asadminpass ~appserv/.seccaw.asadminpass

fi

cd /opt/java/glassfish/glassfish/domains
    sudo -uappserv ln -snf $domaindir .

echo "Setup sysv init"
    update-rc.d seccawctl defaults

echo "Start seccaw..."
    # initctl start seccaw
    /etc/init.d/seccawctl start
