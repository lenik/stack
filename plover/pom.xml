<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.seccaproject.parent</groupId>
		<artifactId>parent</artifactId>
		<version>1</version>
	</parent>
	<groupId>com.seccaproject.plover</groupId>
	<artifactId>plover</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>net.bodz.bas</groupId>
				<artifactId>bas-api</artifactId>
				<version>0.0.1</version>
			</dependency>
			<!--Project dependencies-->
			<dependency>
				<groupId>com.seccaproject.plover</groupId>
				<artifactId>plover-arch</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>com.seccaproject.plover</groupId>
				<artifactId>plover-collections</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>com.seccaproject.plover</groupId>
				<artifactId>plover-sysutils</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>com.seccaproject.plover</groupId>
				<artifactId>plover-widgets</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<modules>
		<module>modules</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<failOnError>true</failOnError>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<tagBase>${svn.base.dev}/plover/tags</tagBase>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<name>SECCA :: Plover</name>
	<url>http://www.secca-project.com</url>
	<inceptionYear>2009</inceptionYear>
	<developers>
		<!--Please list in the alphabet order by developer id.-->
		<developer>
			<id>XJL</id>
			<name>谢继雷</name>
			<email>xjl@99jsj.com</email>
			<roles>
				<role>Project Leader</role>
				<role>Developer</role>
			</roles>
			<timezone>GMT+8</timezone>
		</developer>
	</developers>
	<mailingLists>
		<mailingList>
			<name>SECCA Developer</name>
			<archive>http://list.secca-project.com/archive/dev</archive>
			<post>post-dev@list.secca-project.com</post>
			<subscribe>subscribe-dev@list.secca-project.com</subscribe>
			<unsubscribe>unsubscribe-dev@list.secca-project.com</unsubscribe>
		</mailingList>
	</mailingLists>
	<scm>
		<connection>scm:svn:${svn.base}/plover/trunk</connection>
		<developerConnection>scm:svn:${svn.base.dev}/plover/trunk</developerConnection>
		<url>${svn.base.web}/plover/trunk</url>
	</scm>
</project>
