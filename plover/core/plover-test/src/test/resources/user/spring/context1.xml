<?xml  version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        ">

    <bean id="book1" class="com.bee32.plover.restful.book.Book">
        <constructor-arg value="name1" />
        <constructor-arg value="content1" />
    </bean>

    <bean id="book2" class="com.bee32.plover.restful.book.Book">
        <property name="name" value="name2" />
        <property name="content">
            <value>content2</value>
        </property>
    </bean>

    <context:component-scan base-package="user.spring">
    </context:component-scan>

</beans>