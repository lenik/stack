<?xml  version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        ">

    <context:component-scan base-package="com.bee32, user"
        scope-resolver="com.bee32.plover.inject.spring.TrueJsr330ScopeMetadataResolver">
        <context:include-filter type="annotation" expression="com.bee32.plover.inject.ServiceTemplate" />
        <context:exclude-filter type="custom" expression="com.bee32.plover.inject.spring.NonConcreteFilter" />
        <context:exclude-filter type="annotation" expression="com.bee32.plover.inject.NotAComponent" />
    </context:component-scan>

</beans>